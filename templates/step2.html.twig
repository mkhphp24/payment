{% extends 'base.html.twig' %}

{% block title %}{{titile}}{% endblock %}

{% block body %}
    {{ include('menu.html.twig') }}

<div class="row setup-content" id="step-2">
    <div class="col-xs-6 col-md-offset-3">
        <div class="col-md-12">
            <h3> Step 2</h3>
            <form id="form_step1" action="/step2" method="post">
            <div class="form-group">
                <label class="control-label">street </label>
                <input maxlength="200" type="text"  value="{{ dataForm['street'] }}" name="street" required="required" class="form-control" placeholder="Enter street">
                <small class="text-danger">{{ errorMesage['street']['error']|raw }}</small>

            </div>
            <div class="form-group">
                <label class="control-label">House Number </label>
                <input maxlength="5" type="text"   value="{{ dataForm['house_number'] }}" name="house_number" required="required" class="form-control" placeholder="Enter house_number">
                <small class="text-danger">{{ errorMesage['house_number']['error']|raw }}</small>

            </div>
            <div class="form-group">
                <label class="control-label">zip</label>
                <input maxlength="5" type="text"  value="{{ dataForm['zip'] }}" name="zip" required="required" class="form-control" placeholder="Enter zip">
                <small class="text-danger">{{ errorMesage['zip']['error']|raw }}</small>

            </div>
            <div class="form-group">
                <label class="control-label">City </label>
                <input maxlength="5" type="text"  value="{{ dataForm['city'] }}" name="city" required="required" class="form-control" placeholder="Enter city">
                <small class="text-danger">{{ errorMesage['city']['error']|raw }}</small>

            </div>

            <button class="btn btn-primary prevBtn btn-lg pull-left target" onclick="window.location.href='/step1'" type="button">Previous</button>
            <button class="btn btn-primary nextBtn btn-lg pull-right target"  step="2" target="#step-3" type="submit">Next</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
